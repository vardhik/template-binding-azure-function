@model TemplateGenerate.ViewModel.LoginDetailViewModel

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=no;">
    <meta http-equiv="X-UA-Compatible" content="IE=9; IE=8; IE=7; IE=EDGE" />
</head>
<body>
    <table width="600" align="center" bgcolor="#ffffff" cellspacing="5" cellpadding="5" style="width:600px;min-width:600px;">
        <tbody>
            <tr>
                <td border="1" style="border:1px solid;border-top-color: #cccccc;border-left-color: #cccccc;border-bottom-color: #cccccc;border-right-color: #cccccc;">
                    <table cellspacing="3" cellpadding="3">
                        <tbody>
                            <tr>
                                <td>
                                    <span style="font-size:14px;">Dear @Model.Email,</span>
                                </td>
                            </tr>
                            
                            <tr>
                                <td>
                                    <span style="font-size:14px;">Thank you for viewing our tutorial.</span><br />
                                    <span style="font-size:14px;">We are happy to hear your feedback.</span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <span style="font-size:14px;">Best Regards,</span><br />
                                    <span style="font-size:14px;">Vardhik Prajapati</span>
                                </td>
                            </tr>
                            <tr>
                                <td align="center" style="border-top: 1px solid;border-left:0;border-bottom: 0;border-right:0;border-color: #cccccc;">
                                    <span style="font-size:12px;"><font color="#949494">Note : Please do not replay to this mail. It has been sent from an email account that is not monitored.</font></span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>

        </tbody>
    </table>

</body>
</html>